                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toEndOf="@id/tv_technician_name"
                app:layout_constraintStart_toStartOf="@id/tv_technician_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_service_type" />

            <TextView
                android:id="@+id/tv_technician_number"
                style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="2dp"
                android:layout_marginLeft="15dp"
