            <TextView
                android:id="@+id/tv_timer"
                style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="6dp"
                android:paddingLeft="@dimen/padding_20dp"
                android:includeFontPadding="false"
                android:text="@string/timer"
                android:textStyle="bold"

                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toEndOf="@id/tv_pin_code_value"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tv_pin_code_value"
                app:layout_constraintTop_toBottomOf="@id/tv_pin_code_value" />

            <TextView
                android:id="@+id/tv_timer_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/tv_timer"
                app:layout_constraintStart_toStartOf="@id/tv_timer"
                app:layout_constraintTop_toBottomOf="@id/tv_timer"
                tools:text="120123" />


            <TextView
                android:id="@+id/tv_pin_code"
                style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:includeFontPadding="false"
                android:text="@string/pin_code"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:drawableStartCompat="@drawable/ic_location"
                app:layout_constraintEnd_toEndOf="@id/tv_request_date_value"
                app:layout_constraintStart_toStartOf="@id/tv_request_date_value"
                app:layout_constraintTop_toBottomOf="@id/tv_request_date_value" />

            <TextView
                android:id="@+id/tv_pin_code_value"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="120123"
                android:paddingLeft="20dp"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/tv_pin_code"
                app:layout_constraintStart_toStartOf="@id/tv_pin_code"
                app:layout_constraintTop_toBottomOf="@id/tv_pin_code"
                tools:text="120123" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_locate"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_pin_code_value"
                app:layout_constraintEnd_toStartOf="@id/gl_vertical_end"
                app:layout_constraintTop_toTopOf="@id/tv_pin_code" />


            <TextView
                android:id="@+id/tv_full_address"
                style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="@string/full_address"
                android:visibility="visible"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toEndOf="@id/tv_technician_number_values"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/tv_technician_number_values"
                app:layout_constraintTop_toBottomOf="@id/tv_technician_number_values" />

            <TextView
                android:id="@+id/tvCustomerFullAddressValues"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:paddingLeft="20dp"
                android:visibility="visible"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:text="In addition to setting the gravity, this can also help with alignment in some situations by reducing paddings on the top and bottom of the textview, which can be unequal:"
                app:layout_constraintEnd_toStartOf="@id/gl_vertical_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/gl_vertical_start"
                app:layout_constraintTop_toBottomOf="@id/tv_full_address"
                tools:text="In addition to setting the gravity, this can also help with alignment in some situations by reducing paddings on the top and bottom of the textview, which can be unequal:" />

            <View
                android:id="@+id/v_divider"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:background="@color/off_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_type" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_task_completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:itemCount="4"
                android:divider="@null"
                android:groupIndicator="@null"
                tools:listitem="@layout/fragment_task_update"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_divider" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/li_assign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_item">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify_otp"
            style="@style/Theme.OrpatServiceCenter.Buttons_Flat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Medium_button_height"
            android:text="@string/btn_verifyhappy_code"
            app:cornerRadius="0dp"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            android:visibility="gone"
            app:iconTint="@color/dim_white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hide_verify_otp"
            style="@style/Theme.OrpatServiceCenter.Buttons_OffWhite_Flat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Medium_button_height"
            android:text="@string/btn_verifyhappy_code"
            app:cornerRadius="0dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            android:visibility="visible"
            app:iconTint="@color/dim_white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            style="@style/Theme.OrpatServiceCenter.Buttons_Flat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Medium_button_height"
            android:text="@string/submit"
            app:cornerRadius="0dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            android:visibility="gone"
            app:iconTint="@color/dim_white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hide_submit"
            style="@style/Theme.OrpatServiceCenter.Buttons_OffWhite_Flat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Medium_button_height"
            android:text="@string/submit"
            app:cornerRadius="0dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            android:visibility="gone"
            app:iconTint="@color/dim_white" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
