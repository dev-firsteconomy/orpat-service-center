<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/li_parts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_serviceable_warranty_parts_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_50dp"
             android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/down_iv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_weight="0.5"
            android:layout_alignParentRight="true"
            app:layout_constraintStart_toEndOf="@+id/tv_serviceable_warranty_parts_name"
            android:src="@drawable/ic_arrow_drop_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_not_covered_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_50dp"
        android:textColor="@color/failure_red"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="@dimen/margin_10dp"
        android:text="@string/not_covered_below_condition_string"
        app:layout_constraintTop_toBottomOf="@+id/li_parts"
        app:layout_constraintStart_toStartOf="parent"
       />

    <View
        android:id="@+id/view_parent"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_not_covered_condition"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>