<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/Theme.OrpatServiceCenter.MediumText.toolbarTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_profile"
            android:textColor="@color/brown" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_user_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/off_white"
        app:contentPadding="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_name"
                style="@style/Theme.OrpatServiceCenter.MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_profile_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_mobile"
                style="@style/Theme.OrpatServiceCenter.RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_pincode"
                style="@style/Theme.OrpatServiceCenter.RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mobile">

            </com.google.android.material.textview.MaterialTextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:contentPadding="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@id/mcv_user_details">

        <com.google.android.material.textview.MaterialTextView
            style="@style/Theme.OrpatServiceCenter.MediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_settings"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="@dimen/fab_margin"
            android:text="@string/setting" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        app:contentPadding="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@id/mcv_setting">

        <com.google.android.material.textview.MaterialTextView
            style="@style/Theme.OrpatServiceCenter.MediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_payment_small"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="@dimen/fab_margin"
            android:text="@string/payment" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        app:contentPadding="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@id/mcv_payment">

        <com.google.android.material.textview.MaterialTextView
            style="@style/Theme.OrpatServiceCenter.MediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_notifications_small"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="@dimen/fab_margin"
            android:text="@string/notifications" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_supports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:contentPadding="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@id/mcv_notification">

        <com.google.android.material.textview.MaterialTextView
            style="@style/Theme.OrpatServiceCenter.MediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_help"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawablePadding="@dimen/fab_margin"
            android:text="@string/supports" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:contentPadding="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@id/mcv_supports">

        <com.google.android.material.textview.MaterialTextView
            style="@style/Theme.OrpatServiceCenter.MediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_logout_small"
            android:drawablePadding="@dimen/fab_margin"
            android:text="@string/logout" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>