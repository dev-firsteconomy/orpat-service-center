<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.leads.service_center.RequestLeadActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dim_white"
        android:minHeight="?attr/actionBarSize"
        android:translationZ="1dp"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/Theme.OrpatServiceCenter.MediumText.toolbarTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:text="@string/requests"
                android:textColor="@color/brown" />


            <TextView
                android:id="@+id/toolbarTotalLead"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/drawable_circle"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/iv_request"
                app:layout_constraintEnd_toEndOf="@id/iv_request"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/iv_request"
                app:layout_constraintTop_toTopOf="@id/iv_request"
                app:layout_constraintVertical_bias="0.6" />


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            style="@style/Theme.OrpatServiceCenter.MediumText.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/fab_margin"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:tabRippleColor="@color/off_white"
            app:tabTextAppearance="@style/Theme.OrpatServiceCenter.RegularText.TabLayoutTextAppearance" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_requests"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/cpi_loading"
        android:layout_width="15dp"
        android:visibility="gone"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        app:indicatorColor="@color/red"
        app:trackThickness="4dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>