                android:id="@+id/tv_no_warranty_task_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/rv_warrant_parts"
                app:layout_constraintHorizontal_bias="0.002"
                app:layout_constraintStart_toStartOf="@id/rv_warrant_parts"
                app:layout_constraintTop_toBottomOf="@id/rv_warrant_parts" />

            <Button
                android:id="@+id/tv_hide_no_warranty_task_update"
                style="@style/Theme.OrpatServiceCenter.Buttons_OffGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/rv_warrant_parts"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="Update"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/rv_warrant_parts"
                app:layout_constraintTop_toBottomOf="@id/rv_warrant_parts"/>-->
        <!--</LinearLayout>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>