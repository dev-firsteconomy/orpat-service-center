        <TextView
            android:id="@+id/tv_customer_description"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/customer_description"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_model_name_value" />


        <TextView
            android:id="@+id/tv_description_value"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_description" />


        <TextView
            android:id="@+id/tv_complaint_preset"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/complaint_preset"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description_value" />


        <TextView
            android:id="@+id/tv_complaint_preset_value"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_complaint_preset" />

        <TextView
            android:id="@+id/tv_service_center_description"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/service_center_description"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_complaint_preset_value" />

        <TextView
            android:id="@+id/tv_service_center_description_value"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:hint="@string/type_here"
            android:gravity="left"
            android:visibility="gone"
            android:background="@drawable/bg_edit_text_border"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_service_center_description" />

        <TextView
            android:id="@+id/tv_error_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="gone"
            android:text="@string/error_service_center_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_service_center_description_value"/>

        <TextView
            android:id="@+id/tv_invoice_image"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/invoice_image"
            app:layout_constraintEnd_toStartOf="@id/tv_qr_code_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_des" />

        <ImageView
            android:id="@+id/iv_invoice_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:background="@drawable/bg_text_border"
            android:src="@drawable/ic_no_invoice"
            app:layout_constraintStart_toStartOf="@id/tv_invoice_image"
            app:layout_constraintTop_toBottomOf="@id/tv_invoice_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upload_invoice"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:text="@string/upload_part_image"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:visibility="gone"
            android:padding="5dp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_upload_invoice"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@id/iv_invoice_image"
            app:layout_constraintStart_toStartOf="@id/iv_invoice_image"
            app:layout_constraintTop_toBottomOf="@id/iv_invoice_image" />

        <TextView
            android:id="@+id/tv_qr_code_image"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/qr_code_image"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_invoice_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_invoice_image"
            app:layout_constraintTop_toTopOf="@id/tv_invoice_image" />

        <ImageView
            android:id="@+id/iv_qr_code_image"
            android:layout_width="91dp"
            android:layout_height="106dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@color/orange"
            app:layout_constraintEnd_toEndOf="@id/tv_qr_code_image"
            app:layout_constraintStart_toStartOf="@id/tv_qr_code_image"
            app:layout_constraintTop_toBottomOf="@id/tv_invoice_image" />

        <TextView
            android:id="@+id/tv_qr_code_number"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="127406668688"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/iv_qr_code_image"
            app:layout_constraintStart_toStartOf="@id/iv_qr_code_image"
            app:layout_constraintTop_toBottomOf="@id/iv_qr_code_image"/>


        <TextView
            android:id="@+id/tv_invoice_number"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/invoice_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_upload_invoice" />

        <TextView
            android:id="@+id/edt_invoice_number_value"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:hint="@string/type_here"
            android:gravity="center_vertical"
            android:background="@drawable/bg_edit_text_border"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_invoice_number" />

        <TextView
            android:id="@+id/tv_error_invoice_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="gone"

            android:text="@string/error_invoice_number_string"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_invoice_number_value"/>

        <TextView
            android:id="@+id/tv_select_invoice_date"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/invoice_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_invoice_number" />

        <TextView
            android:id="@+id/edt_select_invoice_date"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:hint="@string/select_date"
            android:gravity="center_vertical"
            android:background="@drawable/bg_edit_text_border"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_invoice_date" />

        <TextView
            android:id="@+id/tv_warranty_list_image"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text_border"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:text="@string/part_verification_image"
            android:textColor="@color/failure_red"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_select_invoice_date" />

        <TextView
            android:id="@+id/tv_error_invoice_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="gone"
            android:text="@string/error_invoice_date_string"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_warranty_list_image"/>


