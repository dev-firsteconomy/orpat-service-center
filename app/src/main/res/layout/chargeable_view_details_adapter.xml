        <LinearLayout
            android:id="@+id/li_warranty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_invoice_date">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_under_warranty"
                    style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/under_warranty" />


                <RadioGroup
                    android:id="@+id/rb_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/radiobtn_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:text="Yes"
                        android:checked="false"
                        android:textSize="14sp"
                        app:backgroundTint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radiobtn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="No"
                        android:checked="false"
                        android:textSize="14sp"
                        app:backgroundTint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radiobtn_not_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Not Sure"
                        android:checked="false"
                        android:textSize="14sp"
                        app:backgroundTint="#FFFFFF" />

                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_warranty_date"
                    style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/warranty_end_date" />

                <TextView
                    android:id="@+id/tv_warranty_date_value"
                    style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="3rd Dec 2021" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_error_under_warranty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="gone"
            android:text="@string/error_under_warranty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/li_warranty"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update"
            style="@style/Theme.OrpatServiceCenter.Buttons_Flat"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_height="44dp"
            android:text="@string/btn_update"
            app:cornerRadius="0dp"
            android:layout_marginTop="10dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            android:visibility="gone"
            app:iconTint="@color/dim_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_under_warranty" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hide_update"
            style="@style/Theme.OrpatServiceCenter.Buttons_OffGray"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_height="44dp"
            android:text="@string/btn_update"
            app:cornerRadius="0dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            app:iconGravity="textEnd"
            app:iconTint="@color/dim_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/li_warranty" />

