<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/popup_img_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="TODO"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

  <!--  <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">




    <LinearLayout
        android:id="@+id/li_first_row"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:id="@+id/first_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/hide_first_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:background="@color/gray"
            android:visibility="gone"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/second_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_direction"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/hide_second_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/gray"
            android:visibility="gone"
            android:padding="20dp"
            android:src="@drawable/ic_direction"
            android:layout_weight="1"/>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/li_second_row"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/li_image_list">

            <ImageView
                android:id="@+id/third_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/hide_third_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/gray"
                android:visibility="gone"
                android:padding="20dp"
                android:src="@drawable/ic_direction"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/fourth_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"
                android:src="@drawable/ic_profile"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/hide_fourth_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/gray"
                android:visibility="gone"
                android:padding="20dp"
                android:src="@drawable/ic_direction"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_third_row"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/li_second_row">

            <ImageView
                android:id="@+id/fifth_image"
                android:src="@drawable/ic_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/hide_fifth_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/gray"
                android:visibility="gone"
                android:padding="20dp"
                android:src="@drawable/ic_direction"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/sixth_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/Theme.OrpatServiceCenter.Buttons_OffWhite_Flat"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:text="@string/select"
            android:visibility="gone"
            android:background="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>