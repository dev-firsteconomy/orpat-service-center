        <TextView
            android:id="@+id/tv_qr_code_number"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/scannerView"
            app:layout_constraintStart_toStartOf="@id/scannerView"
            app:layout_constraintTop_toBottomOf="@id/scannerView"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_qr"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:text="@string/scan_barcode"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@id/tv_qr_code_number"
            app:layout_constraintStart_toStartOf="@id/tv_qr_code_number"
            app:layout_constraintTop_toBottomOf="@id/tv_qr_code_number" />


        <TextView
            android:id="@+id/tv_qrcode_verify"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/txt_qrcode_verify"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_upload_image" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/brown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_qrcode_verify"/>

        <TextView
            android:id="@+id/tv_qrcode_success_verify"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:visibility="gone"
            android:includeFontPadding="false"
            android:text="@string/txt_qrcode_verify"
            android:textSize="10sp"
            android:textColor="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_technician_update"
            style="@style/Theme.OrpatServiceCenter.Buttons"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_update"
            app:cornerRadius="0dp"
            android:layout_marginTop="5dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            android:visibility="visible"
            app:iconTint="@color/dim_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_qrcode_success_verify" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_technician_hide_update"
            style="@style/Theme.OrpatServiceCenter.Buttons_OffGray"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_height="44dp"
            android:text="@string/btn_update"
            app:cornerRadius="0dp"
            android:visibility="gone"
            app:iconGravity="textEnd"
            app:iconTint="@color/dim_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_qrcode_success_verify" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>