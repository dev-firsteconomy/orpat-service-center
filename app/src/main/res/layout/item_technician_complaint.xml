        <TextView
            android:id="@+id/tv_qr_code_image"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/qr_code_image"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_invoice_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_invoice_image"
            app:layout_constraintTop_toTopOf="@id/tv_invoice_image" />

        <FrameLayout
            android:id="@+id/scannerView"
            android:layout_width="91dp"
            android:layout_height="90dp"
            android:background="@color/brown"
            app:layout_constraintEnd_toEndOf="@id/tv_qr_code_image"
            app:layout_constraintStart_toStartOf="@id/tv_qr_code_image"
            app:layout_constraintTop_toBottomOf="@id/tv_invoice_image">


            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcode_scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_qr_code_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dummy_qr_code"
                android:scaleType="fitCenter"
                android:background="@color/white"
                android:visibility="visible"/>

        </FrameLayout>

