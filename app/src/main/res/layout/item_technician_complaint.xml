<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:translationZ="2dp"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/li_no_scanner_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/corner_radius">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Task 01/04"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_model_number"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/model_number"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_task"/>

        <TextView
            android:id="@+id/tv_model_name_value"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_model_number"
            app:layout_constraintStart_toStartOf="@id/tv_model_number"
            app:layout_constraintTop_toBottomOf="@id/tv_model_number"
            tools:text="0000000122" />


        <TextView
            android:id="@+id/tv_customer_description"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/customer_description"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_model_name_value" />


        <TextView
            android:id="@+id/tv_description_value"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_description" />

        <TextView
            android:id="@+id/tv_service_center"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/service_center_note"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description_value" />

        <TextView
            android:id="@+id/tv_service_center_value"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_service_center" />

        <TextView
            android:id="@+id/tv_customer_issue"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/complaint_preset"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_service_center_value" />

        <TextView
            android:id="@+id/tv_customer_issue_value"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_issue"
            />

        <TextView
            android:id="@+id/tv_invoice_image"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/invoice_image"
            app:layout_constraintEnd_toStartOf="@id/tv_qr_code_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_issue_value" />

        <ImageView
            android:id="@+id/iv_invoice_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@color/orange"
            app:layout_constraintStart_toStartOf="@id/tv_invoice_image"
            app:layout_constraintTop_toBottomOf="@id/tv_invoice_image" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/brown"
            app:layout_constraintEnd_toEndOf="@id/iv_invoice_image"
            app:layout_constraintStart_toStartOf="@id/iv_invoice_image"
            app:layout_constraintTop_toBottomOf="@id/iv_invoice_image"/>

        <LinearLayout
            android:id="@+id/li_upload_part_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/view_divider"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/view_divider"
            app:layout_constraintTop_toBottomOf="@id/view_divider">

            <ImageView
                android:id="@+id/iv_upload_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@color/orange"
                app:layout_constraintEnd_toEndOf="@id/view_divider"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/view_divider"
                app:layout_constraintTop_toBottomOf="@id/view_divider" />

            <TextView
                android:id="@+id/tv_count_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="count"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/iv_upload_image"
                app:layout_constraintStart_toEndOf="@id/iv_upload_image"
                app:layout_constraintTop_toTopOf="@id/iv_upload_image" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload_image"
                style="@style/Theme.OrpatServiceCenter.SmallText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_upload_invoice"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:text="@string/upload_part_image"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/tv_count_image"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/tv_count_image"
                app:layout_constraintTop_toBottomOf="@id/tv_count_image" />

        </LinearLayout>





        <TextView
            android:id="@+id/tv_qr_code_image"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/qr_code_image"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_invoice_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_invoice_image"
            app:layout_constraintTop_toTopOf="@id/tv_invoice_image" />

        <FrameLayout
            android:id="@+id/scannerView"
            android:layout_width="91dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@color/brown"
            app:layout_constraintEnd_toEndOf="@id/tv_qr_code_image"
            app:layout_constraintStart_toStartOf="@id/tv_qr_code_image"
            app:layout_constraintTop_toBottomOf="@id/tv_invoice_image">


            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcode_scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_qr_code_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dummy_qr_code"
                android:scaleType="fitCenter"
                android:background="@color/white"
                android:visibility="visible"/>

        </FrameLayout>


        <TextView
            android:id="@+id/tv_qr_code_number"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/scannerView"
            app:layout_constraintStart_toStartOf="@id/scannerView"
            app:layout_constraintTop_toBottomOf="@id/scannerView"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_qr"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:text="@string/scan_barcode"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@id/tv_qr_code_number"
            app:layout_constraintStart_toStartOf="@id/tv_qr_code_number"
            app:layout_constraintTop_toBottomOf="@id/tv_qr_code_number" />


        <TextView
            android:id="@+id/tv_qrcode_verify"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/txt_qrcode_verify"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/li_upload_part_img" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/brown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_qrcode_verify"/>

        <TextView
            android:id="@+id/tv_qrcode_success_verify"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:visibility="gone"
            android:includeFontPadding="false"
            android:text="@string/txt_qrcode_verify"
            android:textSize="10sp"
            android:textColor="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_technician_update"
            style="@style/Theme.OrpatServiceCenter.Buttons"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_update"
            app:cornerRadius="0dp"
            android:layout_marginTop="10dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            android:visibility="visible"
            app:iconTint="@color/dim_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_qrcode_success_verify" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_technician_hide_update"
            style="@style/Theme.OrpatServiceCenter.Buttons_OffGray"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_height="44dp"
            android:text="@string/btn_update"
            app:cornerRadius="0dp"
            android:visibility="gone"
            app:iconGravity="textEnd"
            app:iconTint="@color/dim_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_qrcode_success_verify" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>














    <LinearLayout
        android:id="@+id/li_scanner_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="16dp"
        android:weightSum="2">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_task_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Task 01/04"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_model_number_scan"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/model_number"
           />

        <TextView
            android:id="@+id/tv_model_name_value_scan"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="0000000122" />

        <TextView
            android:id="@+id/tv_customer_description_scan"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/customer_description"
            android:textAlignment="textStart"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_description_value_scan"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:hint="Ceiling fans light is flickering" />

        <TextView
            android:id="@+id/tv_service_center_note_scan"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/service_center_note"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_service_center_value_scan"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_complaint_preset_scan"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/complaint_preset"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_complaint_preset_value_scan"
            style="@style/Theme.OrpatServiceCenter.SmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="textStart"
            android:textSize="14sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_qrcode"
            android:layout_width="match_parent"
            style="@style/Theme.OrpatServiceCenter.Buttons_OffWhite_Flat"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="@string/btn_scan"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/btn_cancel_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/failure_red"
            android:text="@string/btn_cancel_task"
            android:layout_weight="1"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>