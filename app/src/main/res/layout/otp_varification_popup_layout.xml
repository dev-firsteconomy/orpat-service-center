<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".ui.login.technician.OTPVerificationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_start_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="48dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_vertical_end_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="48dp" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_heading"
            style="@style/Theme.OrpatServiceCenter.StepsHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/verification"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toTopOf="@id/tv_subheading"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_start"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subheading"
            style="@style/Theme.OrpatServiceCenter.RegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/please_verify_the_code_sent_to_your_mobile_number"
            app:layout_constraintBottom_toTopOf="@id/tv_resend_otp_timer"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_start"
            app:layout_constraintTop_toBottomOf="@id/tv_heading" />

        <TextView
            android:id="@+id/tv_resend_otp_timer"
            style="@style/Theme.OrpatServiceCenter.MediumText.ResenOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/cl_otp_layout"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end_one"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_start_one"
            app:layout_constraintTop_toBottomOf="@id/tv_subheading" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/cpi_loading_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/brown"
            app:indicatorSize="24dp"
            app:layout_constraintBottom_toTopOf="@id/cl_otp_layout"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end_one"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_start_one"
            app:layout_constraintTop_toBottomOf="@id/tv_subheading"
            app:trackThickness="4dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_otp_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end_one"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_start_one"
            app:layout_constraintTop_toBottomOf="@id/tv_resend_otp_timer">

            <EditText
                android:id="@+id/edt_digit1"
                style="@style/Theme.OrpatServiceCenter.OTPEditText"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="20dp"
                android:cursorVisible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edt_digit2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_digit2"
                style="@style/Theme.OrpatServiceCenter.OTPEditText"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"

                android:cursorVisible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edt_digit3"
                app:layout_constraintStart_toEndOf="@id/edt_digit1"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_digit3"
                style="@style/Theme.OrpatServiceCenter.OTPEditText"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:cursorVisible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edt_digit4"
                app:layout_constraintStart_toEndOf="@id/edt_digit2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_digit4"
                style="@style/Theme.OrpatServiceCenter.OTPEditText"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="4dp"
                android:cursorVisible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/edt_digit3"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_varify_otp"
            style="@style/Theme.OrpatServiceCenter.Buttons"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            app:icon="@drawable/ic_draw_arrow_right"
            app:iconGravity="textEnd"
            app:iconTint="@color/off_white"
            android:text="@string/btn_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end_one"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_start_one"
            app:layout_constraintTop_toBottomOf="@id/cl_otp_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_varify_otp"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_resend_happy_code"
                style="@style/Theme.OrpatServiceCenter.Buttons"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Medium_button_height"
                android:visibility="gone"
                android:textSize="@dimen/text_size_12"
                android:layout_marginBottom="8dp"
                app:iconTint="@color/off_white"
                android:text="@string/resend_happy_code" />

            <!-- <TextView
                            android:id="@+id/tv_resend_happy_code"

                            style="@style/Theme.OrpatServiceCenter.RegularText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/green"
                            android:text="@string/resend_happy_code"
                            />-->
            <!--   <TextView
                   android:id="@+id/tv_register_now"
                   style="@style/Theme.OrpatServiceCenter.RegularText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="16dp"
                   android:text="@string/resend_string"
                   android:textStyle="bold"
                   />
   -->
        </LinearLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/cpi_loading"
            android:layout_width="@dimen/progressbar_height"
            android:layout_height="@dimen/progressbar_height"
            android:layout_marginTop="32dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_vertical_end_one"
            app:layout_constraintStart_toEndOf="@id/gl_vertical_start_one"
            app:layout_constraintTop_toBottomOf="@id/cl_otp_layout"
            app:trackThickness="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>