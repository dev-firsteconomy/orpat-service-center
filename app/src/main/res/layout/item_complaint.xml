                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/black_tab"
                android:gravity="center"
                android:text="@string/gst_in_string"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                android:visibility="visible" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_error_gst_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_gst_number_string"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/li_gst_num" />


        <TextView
            android:id="@+id/tv_gst_name"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/seller_text_string"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_gst_number" />

        <TextView
            android:id="@+id/tv_gst_first_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_edit_text_border"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal"

            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_gst_name" />


        <TextView
            android:id="@+id/tv_gst_trade"
            style="@style/Theme.OrpatServiceCenter.SmallRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/gst_trade_name"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_gst_first_name" />

        <TextView
            android:id="@+id/tv_gst_trade_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_edit_text_border"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_gst_trade" />

        <LinearLayout
            android:id="@+id/li_warranty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_gst_trade_name">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_under_warranty"
                    style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/under_warranty"
                    android:textStyle="bold" />


                <RadioGroup
                    android:id="@+id/rb_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radiobtn_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:checked="false"
                        android:text="Yes"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radiobtn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="5dp"
                        android:text="No"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radiobtn_not_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="5dp"
                        android:text="Not Sure"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF" />
                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_warranty_date"
                    style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/warranty_end_date" />

                <TextView
                    android:id="@+id/tv_warranty_date_value"
                    style="@style/Theme.OrpatServiceCenter.SmallRegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="3rd Dec 2021"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_error_under_warranty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_under_warranty"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/li_warranty" />


        <LinearLayout
            android:id="@+id/li_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_under_warranty">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update"
                style="@style/Theme.OrpatServiceCenter.Buttons"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1.9"
                android:text="@string/btn_update"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible"
                app:cornerRadius="3dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="textEnd"
                app:iconTint="@color/dim_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_under_warranty" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_hide_update"
                style="@style/Theme.OrpatServiceCenter.Buttons_OffGray"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1.9"
                android:text="@string/btn_update"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"
                app:cornerRadius="3dp"
                app:iconGravity="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_under_warranty" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_updated_task"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_weight="0.01"
                android:src="@drawable/ic_updated_task"
                android:visibility="gone"
                app:cornerRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_under_warranty" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_generate_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_under_warranty">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gst_cancel"
                style="@style/Theme.OrpatServiceCenter.Buttons"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="1"
                android:padding="@dimen/padding_5dp"
                android:text="@string/btn_cancel"
                android:textSize="@dimen/text_size_10"
                app:cornerRadius="3dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gst_generate_chargeable"
                style="@style/Theme.OrpatServiceCenter.Buttons"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_weight="1"
                android:padding="@dimen/padding_5dp"
                android:text="@string/btn_generate_chageable"
                android:textSize="@dimen/text_size_10"
                app:cornerRadius="3dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>