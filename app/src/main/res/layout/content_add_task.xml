<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.admin.technician.AddTechnicianActivity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginBottom="30dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


            <TextView
                android:id="@+id/tv_desc"
                style="@style/Theme.OrpatServiceCenter.MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/scan_qr_code_string"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <FrameLayout
                android:id="@+id/scannerView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_desc">

                <com.journeyapps.barcodescanner.DecoratedBarcodeView
                    android:id="@+id/barcode_scanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dummyQRView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="30dp"
                    android:src="@drawable/dummy_qr_code"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    android:visibility="gone"/>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_error_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Please scan the QR code"
                android:paddingLeft="15dp"
                android:visibility="visible"
                android:layout_marginTop="3dp"
                android:textColor="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scannerView"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_customer_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/prblm_details_string"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/corner_radius"
                app:boxCornerRadiusTopStart="@dimen/corner_radius"
                app:boxStrokeColor="@color/gray"
                app:boxStrokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_error_qrcode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_customer_desc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:padding="16dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/brown" />

                <TextView
                    android:id="@+id/tv_error_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Please enter explain your problem in details"
                    android:paddingLeft="15dp"
                    android:textColor="@color/red"
                    android:layout_margin="3dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_customer_desc"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload_invoice"
                style="@style/Theme.OrpatServiceCenter.Buttons_OffWhite"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="@dimen/fab_margin"
                android:text="@string/upload_gst_invoice"
                app:icon="@drawable/ic_baseline_attach_file_24"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_customer_desc" />

            <TextView
                android:id="@+id/tv_error_upload_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Please upload printed GST invoice"
                android:paddingLeft="15dp"
                android:textColor="@color/red"
                android:layout_margin="3dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_upload_invoice"/>

            <TextView
                android:id="@+id/btn_upload_invoice_file"
                style="@style/Theme.OrpatServiceCenter.Buttons_OffWhite"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:drawableLeft="@drawable/ic_photo_library"
                android:drawablePadding="10dp"
                android:textSize="10sp"
                android:background="@drawable/bg_text_border"
                android:layout_marginBottom="@dimen/fab_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_upload_invoice" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_proceed"
                style="@style/Theme.OrpatServiceCenter.Buttons"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/fab_margin"
                android:text="@string/proceed_string"
                android:clickable="false"
                android:visibility="visible"
                app:icon="@drawable/ic_draw_arrow_right"
                app:iconGravity="textEnd"
                app:iconTint="@color/off_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_upload_invoice_file" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>