<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrpatServiceCenter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown</item>
        <item name="colorOnPrimary">@color/brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OrpatServiceCenter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Heading theme-->
    <style name="Theme.OrpatServiceCenter.StepsHead">
        <item name="android:textSize">@dimen/heading_size</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <!-- Button Theme-->
    <style name="Theme.OrpatServiceCenter.Buttons">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="color">@color/brown</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/dim_white</item>
    </style>

    <!-- User Type Radio Button selection theme-->
    <style name="UserTypeRadioButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/rb_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.OrpatServiceCenter.MediumText">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="Theme.OrpatServiceCenter.RegularText">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="Theme.OrpatServiceCenter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OrpatServiceCenter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>