<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.orpatservice.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Open fone dialpad for calling -->
    <uses-permission android:name="android.permission.CALL_PHONE" /> <!-- Permission when working system apps -->
    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:name=".OrpatApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrpatServiceCenter"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.leads.customer_detail.FullScreenImageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.leads.customer_detail.CustomerDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.admin.technician.AddTechnicianActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.admin.technician.TechniciansActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.login.SelectUserActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            android:windowSoftInputMode="stateVisible"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.login.technician.OTPVerificationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            android:windowSoftInputMode="stateVisible"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.admin.dashboard.DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.leads.new_requests.RequestLeadActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.orpatservice.app.ui.leads.technician.TechnicianRequestLeadActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.leads.history.LeadHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OrpatServiceCenter.NoActionBar"
            tools:ignore="LockedOrientationActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.orpatservice.app.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

</manifest>